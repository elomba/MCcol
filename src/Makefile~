OBJ_CORE = Distance.o Util.o Output.o Cells.o Init.o Structure.o Interactions.o Thermo.o Energy.o Move.o Main.o

MODPATH = ./modules

OBJ_ALL = $(OBJ_CORE) set_precision.o Definitions.o

FCOPTS = -fast -module $(MODPATH)

%.o : %.mod

.SUFFIXES : .f90

.f90.o:
	ifort -c $(FCOPTS)   $<

gpMC.exe: $(OBJ_CORE)
	ifort -o gpMC.exe  $(OBJ_ALL)

$(OBJ_CORE) : set_precision.o Definitions.o

Definitions.o : set_precision.o

clean:
	rm -f  $(OBJ_ALL)  *.mod

all:
	$(MAKE)  gpMC.exe

debug:
	$(MAKE) FCOPTS="-debug -O0 -CB -module $(MODPATH)"


